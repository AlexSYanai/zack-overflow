<span class="eleven columns">
<p>
  <h5><%= @post.title %></h5>
  <p>Posted By: <%= User.find(@post.user_id).username %></p>
  <p><%= @post.content %></p>
  <%= @post.comments.count %> comments
</p>

  <div class="button"><%= link_to "Update", edit_post_path(@post)%></div>
  <div class="button"><%= link_to "Comment", new_post_comment_path(@post) %></div>
  <%= button_to "Delete", post_path(@post), method: :delete %>

      <% @post.comments.each do |comment| %>
        <div class="comment_body"><p><%=comment.content %></p></div><br><br>
        <p><div id="comment-points" data-id="<%= comment.id %>" class="votes"><%= comment.total_points %> points</div><br>
        <span id="comment-upvote"><%= button_to '&#x25B2'.html_safe, upvote_post_comment_path(post_id: @post.id, id: comment.id), method: :post, remote: true %></span>
        <span id="comment-downvote"><%= button_to '&#x25BC'.html_safe, downvote_post_comment_path(post_id: @post.id, id: comment.id), method: :post, remote: true %></span></p><br>
      <% end %>
</span>
