<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content, size: "30x25" %><br>
  <%= f.label :category_id %>
  <%= f.select :category_id, Category.all.collect {|p| [ p.name, p.id ] } %><br>
  <%= f.submit "Submit" %>
<% end %>
