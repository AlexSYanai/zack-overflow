<span class="eleven columns">
  <% @posts.each do |post| %>
    <div id="post_index_link"><h5><%=link_to(post.title, post_path(post))%></h5></div>
    <p><%= post.content %>
    <%= post.comments.count %> comments<br>
    <%= link_to 'Comment', new_post_comment_path(post) %></p>
    <div id="post-points-<%= post.id %>"><%= post.total_points %> points</div>
    <button class="upvote" data-id="<%= post.id %>">Up</button>
    <button class="downvote" data-id="<%= post.id %>">Down</button>
  <% end %>
</span>
